<div class="container">
<div class="d-flex mt-5 justify-content-center">
<div class="card">
    <div class="card-header text-white" style="background: linear-gradient(45deg,#007bff,#00a0ff);"><h4><i class="fa fa-image"></i> Nova Imagem</h4></div>
    <div class="card-body">
        <div class="row">
                <form>
                <div class="form-row">
                    <div class="form-group col-6">
                        <!--Image-->
                        <div>
                            <img src="https://mdbootstrap.com/img/Photos/Others/placeholder.jpg" class="img-fluid" alt="example placeholder">
                        </div>

                        <!--Image Upload-->
                        <div class="custom-file mt-2">
                            <input type="file" class="custom-file-input" id="imageUpload">
                            <label class="custom-file-label" for="imageUpload">Choose file</label>
                        </div>
                    </div>

                    <div class="form-group col-6">
                        <!--Title-->
                        <label for="imageTitle">Titulo</label>
                        <div class="input-group mb-3">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="fa fa-image"></i></span>
                            </div>
                            <input type="text" class="form-control" id="imageTitle" placeholder="Digite o titulo da sua imagem">
                        </div>

                        <!--Date-->
                        <label for="imageDate">Data</label>
                        <div class="input-group mb-3">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="fa fa-calendar"></i></span>
                            </div>
                            <input type="date" class="form-control" id="imageDate">
                        </div>

                        <!--Desc-->
                        <label for="imageDesc">Descricao</label>
                        <textarea class="form-control" id="imageDesc" rows="5" placeholder="Digite uma descricao da imagem." style="resize: none;"></textarea>
                        
                        <!--Button-->
                        <div class="btn-group col-12 mt-2">
                            <button class="btn btn-primary" type="submit">Salvar</button>
                            <button class="btn btn-secondary" type="clear">Limpar</button>
                        </div>
                    </div>
                    
                </div>
                </form>

        </div>
    </div>
</div>
</div>
</div>